    async def p_run(self, client):
        while True:
            await client.send_message('@bfgbunker_bot', "–í–ø—É—Å—Ç–∏—Ç—å 5")
            await asyncio.sleep(36000)

    async def l_run(self, client):
        while True:
            await client.send_message('@bfgbunker_bot', "–ë–µ–Ω–∑–∏–Ω")
            await asyncio.sleep(25000)

    async def t_run(self, client):
